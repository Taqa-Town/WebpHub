<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WebpHub.MVVM.Views.Pages.EncodeBulkView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:WebpHub.MVVM.Views.SettingsControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WebpHub.MVVM.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:object="using:WebpHub.MVVM.Models"
    xmlns:viewmodels="using:WebpHub.MVVM.ViewModels"
    x:Name="EncodeBulk"
    d:DataContext="{d:DesignInstance Type=viewmodels:EncodeBulkViewModel}"
    Background="{ThemeResource GridColor}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*" />
                <ColumnDefinition Width="20*" />
            </Grid.ColumnDefinitions>

            <GridView
                x:Name="GridPreviewer"
                Padding="30"
                x:Load="False"
                AllowDrop="True"
                CanDragItems="True"
                CanReorderItems="True"
                FlowDirection="LeftToRight"
                IsItemClickEnabled="True"
                ItemsSource="{x:Bind ViewModel.ImagesList, Mode=TwoWay}"
                SelectionMode="None">

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="object:ImageModel">
                        <Grid>
                            <Image
                                x:Name="Img"
                                Width="100"
                                Height="80"
                                x:Phase="1"
                                Source="{x:Bind Location, Mode=TwoWay}"
                                Stretch="Fill" />
                            <Button
                                x:Name="DeleteButton"
                                Width="30"
                                Height="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                x:Phase="1"
                                BorderThickness="0"
                                Command="{Binding DataContext.DeleteCommand, Mode=OneWay, ElementName=EncodeBulk}"
                                CommandParameter="{x:Bind ID, Mode=TwoWay}"
                                Content="X"
                                FontSize="5"
                                Foreground="Black">
                                <Button.Resources>
                                    <ResourceDictionary>
                                        <SolidColorBrush
                                            x:Key="ButtonBackgroundPointerOver"
                                            Opacity="0.7"
                                            Color="Red" />
                                        <SolidColorBrush x:Key="ButtonBackground" Color="Red" />
                                        <SolidColorBrush x:Key="ButtonBorderBrush" Color="Transparent" />
                                    </ResourceDictionary>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <StackPanel x:Name="panelControl" Grid.Column="1">
                <Button
                    Margin="20,20,0,0"
                    HorizontalAlignment="Center"
                    Command="{x:Bind ViewModel.ImportCommand, Mode=OneWay}"
                    Content="Import Image" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="optionsButton"
                        Grid.Column="0"
                        Margin="0,15,0,15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Options">
                        <Button.Flyout>
                            <Flyout x:Name="SettingFlyout" Placement="BottomEdgeAlignedLeft">
                                <StackPanel
                                    Width="250"
                                    Margin="10"
                                    Background="Transparent">
                                    <control:EncodeBulkSettingView Background="Transparent" />
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>

                    <Button
                        x:Name="EncodeButton"
                        Grid.Column="1"
                        Margin="10,15,0,15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{x:Bind ViewModel.EncodeCommand, Mode=OneWay}"
                        Content="Encode" />
                </Grid>

                <Button
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Command="{x:Bind ViewModel.ClearCommand, Mode=OneWay}"
                    Content="Clear" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*" />
                        <ColumnDefinition Width="0.2*" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="OutPutFolderTxt"
                        Grid.Column="0"
                        Margin="0,0,0,10"
                        PlaceholderText="Output Folder"
                        Text="{x:Bind ViewModel.FolderPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        x:Name="FolderPickerBtn"
                        Grid.Column="1"
                        Margin="5,0,0,10"
                        VerticalAlignment="Center"
                        Command="{x:Bind ViewModel.FolderCommand, Mode=OneWay}">
                        <Button.Content>
                            <FontIcon Glyph="&#xE8B7;" />
                        </Button.Content>
                    </Button>
                </Grid>

                <InfoBar
                    Title="Success"
                    IsOpen="{x:Bind ViewModel.InfobarOpen, Mode=TwoWay}"
                    Severity="Success">
                    <InfoBar.ActionButton>
                        <Button Command="{x:Bind ViewModel.OpenExplorerCommand, Mode=OneWay}" Content="Open Location" />
                    </InfoBar.ActionButton>
                </InfoBar>

                <InfoBar
                    x:Name="failure"
                    IsOpen="{x:Bind ViewModel.PassedTheLimit, Mode=TwoWay}"
                    Message="{x:Bind ViewModel.PassedTheLimitMessage, Mode=OneWay}"
                    Severity="Warning" />

                <InfoBar
                    x:Name="mistake"
                    IsOpen="{x:Bind ViewModel.ViolateCondition, Mode=TwoWay}"
                    Message="{x:Bind ViewModel.WarningMessage, Mode=OneWay}"
                    Severity="Warning" />

                <ProgressRing
                    x:Name="ProgRing"
                    Margin="0,15,0,0"
                    Background="Transparent"
                    IsActive="{x:Bind ViewModel.ProgISActive, Mode=TwoWay}"
                    IsIndeterminate="True"
                    Value="50" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
